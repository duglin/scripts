#!/bin/bash

dir=$(dirname "$0")
source $dir/demoscript
PATH=$(readlink -f $dir):$PATH

(
echo
)&>/dev/null

set -e

doit --ignorerc cd $dir/../myapp
cd $dir/../myapp
rm -f myapp
doit cat Makefile

doit --ignorerc make

rm -f myapp
doit make -f Makefile1

background ./myapp 8080

sleep 1
echo

doit curl -s localhost:8080
doit --ignorerc curl -s localhost:8080/stop

doit ls -l
rm -f myapp
doit make -f Makefile2
doit ls -l

doit --shouldfail which git
# doit alias git
